<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/black2" />

            <RelativeLayout
                android:id="@+id/view_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/setting_item_selector"
                android:paddingBottom="5.0dip"
                android:paddingTop="5.0dip">

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/head" />

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:layout_toRightOf="@id/head"
                    android:text="又土又逗,简称土豆"
                    android:textSize="18.0dip" />

                <TextView
                    android:id="@+id/tvmsg"
                    style="@style/txt_ContextStyle1"
                    android:layout_below="@id/tvname"
                    android:layout_marginTop="10.0dip"
                    android:layout_toRightOf="@id/head"
                    android:text="微信号:worromoT_"
                    android:textSize="14.0dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/right" />

                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="22.0dip"
                    android:layout_toRightOf="@id/tvname"
                    android:src="@drawable/ic_sex_male" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/txt_album"
                style="@style/TxtTitle"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/setting_item_selector"
                android:drawableLeft="@drawable/icon_me_photo"
                android:drawablePadding="10.0dip"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:text="@string/my_posts"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/txt_collect"
                style="@style/TxtTitle"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/setting_item_selector"
                android:drawableLeft="@drawable/icon_me_collect"
                android:drawablePadding="10.0dip"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:text="@string/collection"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/txt_money"
                style="@style/TxtTitle"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/setting_item_selector"
                android:drawableLeft="@drawable/icon_me_money"
                android:drawablePadding="10.0dip"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:text="@string/wallet"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/txt_card"
                style="@style/TxtTitle"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/setting_item_selector"
                android:drawableLeft="@drawable/icon_me_card"
                android:drawablePadding="10.0dip"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:text="@string/card_bag"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/txt_smail"
                style="@style/TxtTitle"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/setting_item_selector"
                android:drawableLeft="@drawable/icon_me_smail"
                android:drawablePadding="10.0dip"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:text="@string/expression2"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/black2" />

            <TextView
                android:id="@+id/txt_setting"
                style="@style/TxtTitle"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/setting_item_selector"
                android:drawableLeft="@drawable/icon_me_setting"
                android:drawablePadding="10.0dip"
                android:drawableRight="@drawable/right"
                android:gravity="center_vertical"
                android:paddingLeft="16.0dip"
                android:paddingRight="10.0dip"
                android:text="@string/settings"
                android:textSize="16.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/black2" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>